### Variables
set $mod Mod4
set $term kitty
set $menu rofi -show drun -show-icons
set $run rofi -show run
set $pass pass-copy -p pass -i
set $clip clipmenu-rofi
set $lock \
    grim - | ffmpeg -loglevel quiet -y -i pipe: -vf "gblur=sigma=12" /tmp/lock.png && \
    swaylock -efr \
        --image /tmp/lock.png \
        --indicator-radius 80 \
        --indicator-thickness 12 \
        --inside-color 00000033 && \
    rm /tmp/lock.png

### Output configuration
output * bg ~/.local/share/wallpaper.png fill

### Idle configuration
exec swayidle \
    timeout 300 "$lock" \
    timeout 600 'swaymsg "output * dpms off"' \
       resume 'swaymsg "output * dpms on"' \
    before-sleep "$lock"

bindsym $mod+Delete exec $lock

### Input configuration
input "2:7:SynPS/2_Synaptics_TouchPad" {
    tap enabled
    middle_emulation enabled
}
seat seat0 hide_cursor 3000

### Key bindings
bindsym $mod+Return exec $term
bindsym $mod+q kill
bindsym $mod+d exec $menu
bindsym Mod1+F2 exec $run
bindsym $mod+p exec $pass
bindsym Mod1+v exec $clip
bindsym Mod1+Ctrl+v exec clipdel --current
bindsym $mod+m exec makoctl invoke
floating_modifier $mod normal
bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'
bindsym Print exec SCREENSHOT_FILE="$(xdg-user-dir SCREENSHOTS)/Screenshot_$(date '+%Y-%m-%d_%H:%M:%S').png" && grim -c "$SCREENSHOT_FILE" && imv -d -f "$SCREENSHOT_FILE" #Print 

### Fn keys
bindsym XF86Launch1 exec $term -e alsamixer #F1
bindsym XF86HomePage exec xdg-settings get default-web-browser | xargs gtk-launch #F5
#bindsym XF86AudioPrev #F6
#bindsym XF86AudioPlay #F7
#bindsym XF86AudioNext #F8
bindsym XF86AudioLowerVolume exec amixer sset Master 5- unmute -q #F9
bindsym XF86AudioRaiseVolume exec amixer sset Master 5+ unmute -q #F10
bindsym XF86AudioMute exec amixer -D pulse sset Master toggle -q #F11

### Moving around
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

### Workspaces
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

### Layout stuff
bindsym $mod+b splith
bindsym $mod+v splitv
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+f fullscreen
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

### Scratchpad
bindsym $mod+minus scratchpad show
bindsym $mod+Shift+minus move scratchpad

### Resizing containers
mode "resize" {
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Auto-floating windows
for_window [class="mpv"] floating enable
no_focus [class="mpv"]
for_window [title="SpeedCrunch"] floating enable

# Application launcher
exec $menu 

# Status Bar
exec waybar

# Notification daemon
exec mako

# Borders
titlebar_border_thickness 0
default_border pixel 3
default_floating_border none
hide_edge_borders both

# Layout
workspace_layout tabbed

include /etc/sway/config.d/*
